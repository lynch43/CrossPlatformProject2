<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject2.Views.StartPage"
             Title="Start">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnSettings" Clicked="btnSettings_Clicked" Text="Settings"></Button>
        <Button x:Name="btnStartTrivia" Clicked="btnStartTrivia_Clicked" Text="Start Trivia"></Button>
        
    </VerticalStackLayout>
</ContentPage>