<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrossPlatformProject2.ViewModels"
             x:Class="CrossPlatformProject2.Views.StartPage"
             Title="Start"
             BackgroundColor="Black">
    <ContentPage.BindingContext>
        <vm:StartPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Settings Button -->
        <Button Text="Settings"
                Command="{Binding NavigateToSettingsCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"
                FontSize="16"
                HorizontalOptions="Center"
                CornerRadius="10" />

        <!-- Welcome Label -->
        <Label Text="Welcome to Trivia Game"
               TextColor="White"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="24"
               FontAttributes="Bold"
               Margin="0,10" />

        <!-- Contestants Label -->
        <Label Text="Contestants:"
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="18"
               Margin="0,10" />

        <!-- Dynamic Player Input Fields -->
        <CollectionView ItemsSource="{Binding PlayerNames}" SelectionMode="None" HorizontalOptions="FillAndExpand" Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Entry Placeholder="Enter Name"
                           Text="{Binding .}"
                           BackgroundColor="White"
                           TextColor="Black"
                           HorizontalOptions="FillAndExpand"
                           FontSize="16"
                           Margin="10,5" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Start Trivia Button -->
        <Button Text="Start Trivia"
                Command="{Binding StartTriviaCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"
                FontSize="16"
                HorizontalOptions="Center"
                CornerRadius="10"
                Padding="10" />
    </VerticalStackLayout>
</ContentPage>
