<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformProject2.Views.GamePage"
             BackgroundColor="Black"
             Title="Game">

    <Grid Padding="20" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Question -->
        <Label Text="{Binding CurrentQuestion}"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="0"
               Margin="0,10" />

        <!-- Answers -->
        <CollectionView ItemsSource="{Binding Answers}" 
                        SelectedItem="{Binding SelectedAnswer}"
                        Grid.Row="1" 
                        SelectionMode="Single"
                        Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10"
                           BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}" 
                           CornerRadius="8">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="{Binding Index}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   WidthRequest="30" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{Binding Text}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   VerticalTextAlignment="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Player Names Input -->
        <StackLayout Grid.Row="2" Orientation="Vertical" HorizontalOptions="Center" Margin="0,10">
            <Label Text="Enter Player Names" FontSize="20" TextColor="White" HorizontalOptions="Center" />

            <!-- Dynamic Entries for Player Names -->
            <StackLayout x:Name="PlayerNamesLayout" Orientation="Vertical" Margin="0,10">
                <!-- This will be populated dynamically -->
            </StackLayout>
        </StackLayout>

        <!-- Player's Turn and Score -->
        <StackLayout Grid.Row="3" Orientation="Vertical" HorizontalOptions="Center" Margin="0,10">
            <Label Text="{Binding TurnDisplay}" 
                   FontSize="18" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   Margin="0,5"/>
            <Label Text="{Binding ScoreDisplay}" 
                   FontSize="18" 
                   TextColor="White" 
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Answer Selection Buttons -->
        <StackLayout Grid.Row="4" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="20,10">
            <Button Text="A" Command="{Binding SelectAnswerCommand}" CommandParameter="A" BackgroundColor="Gray" TextColor="White" WidthRequest="50" />
            <Button Text="B" Command="{Binding SelectAnswerCommand}" CommandParameter="B" BackgroundColor="Gray" TextColor="White" WidthRequest="50" />
            <Button Text="C" Command="{Binding SelectAnswerCommand}" CommandParameter="C" BackgroundColor="Gray" TextColor="White" WidthRequest="50" />
            <Button Text="D" Command="{Binding SelectAnswerCommand}" CommandParameter="D" BackgroundColor="Gray" TextColor="White" WidthRequest="50" />
        </StackLayout>

        <!-- Submit Button -->
        <Button Text="Submit Answer" 
                Command="{Binding SubmitAnswerCommand}" 
                BackgroundColor="Gray" 
                TextColor="White" 
                FontSize="18" 
                CornerRadius="10" 
                Padding="10" 
                HorizontalOptions="Center" 
                Grid.Row="5"
                Margin="0,20" />
    </Grid>
</ContentPage>
