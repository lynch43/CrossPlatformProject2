<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrossPlatformProject2.ViewModels"
             x:Class="CrossPlatformProject2.Views.GamePage"
             Title="Game">
    <ContentPage.BindingContext>
        <vm:GamePageViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Question -->
            <RowDefinition Height="*" />
            <!-- Answers -->
            <RowDefinition Height="Auto" />
            <!-- Turn and Score -->
            <RowDefinition Height="Auto" />
            <!-- Answer Selection Buttons -->
            <RowDefinition Height="Auto" />
            <!-- Submit Button -->
        </Grid.RowDefinitions>

        <!-- Question -->
        <Label Text="{Binding CurrentQuestion}"
               FontSize="24"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="0"
               Margin="0,10" />

        <!-- Answers -->
        <CollectionView ItemsSource="{Binding Answers}" 
                        SelectedItem="{Binding SelectedAnswer}"
                        Grid.Row="1" 
                        SelectionMode="Single"
                        Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10"
                           BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}" 
                           CornerRadius="8">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="{Binding Index}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   WidthRequest="30" 
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{Binding Text}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   VerticalTextAlignment="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Player's Turn and Score -->
        <StackLayout Grid.Row="2" Orientation="Vertical" HorizontalOptions="Center" Margin="0,10">
            <Label Text="{Binding TurnDisplay}" 
                   FontSize="18" 
                   TextColor="Black" 
                   HorizontalOptions="Center" 
                   Margin="0,5"/>
            <Label Text="{Binding ScoreDisplay}" 
                   FontSize="18" 
                   TextColor="Black" 
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Answer Selection Buttons -->
        <StackLayout Grid.Row="3" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="20,10">
            <Button Text="A" Command="{Binding SelectAnswerCommand}" CommandParameter="A" BackgroundColor="DarkBlue" TextColor="White" WidthRequest="50" />
            <Button Text="B" Command="{Binding SelectAnswerCommand}" CommandParameter="B" BackgroundColor="DarkBlue" TextColor="White" WidthRequest="50" />
            <Button Text="C" Command="{Binding SelectAnswerCommand}" CommandParameter="C" BackgroundColor="DarkBlue" TextColor="White" WidthRequest="50" />
            <Button Text="D" Command="{Binding SelectAnswerCommand}" CommandParameter="D" BackgroundColor="DarkBlue" TextColor="White" WidthRequest="50" />
        </StackLayout>

        <!-- Submit Button -->
        <Button Text="Submit Answer" 
                Command="{Binding SubmitAnswerCommand}" 
                BackgroundColor="DarkBlue" 
                TextColor="White" 
                FontSize="18" 
                CornerRadius="10" 
                Padding="10" 
                HorizontalOptions="Center" 
                Grid.Row="4"
                Margin="0,20" />
    </Grid>
</ContentPage>
