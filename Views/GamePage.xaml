<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrossPlatformProject2.ViewModels"
             xmlns:local="clr-namespace:CrossPlatformProject2.Converters"
             x:Class="CrossPlatformProject2.Views.GamePage"
             Title="Game">
    <ContentPage.BindingContext>
        <vm:GamePageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        
        <Label Text="{Binding CurrentQuestion}"
               FontSize="24"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="0" />

        
        <CollectionView ItemsSource="{Binding Answers}" 
                        SelectedItem="{Binding SelectedAnswer}"
                        Grid.Row="1" 
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10"
                           BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}" 
                           CornerRadius="5">
                        <StackLayout Orientation="Horizontal">
                            
                            <Label Text="{Binding Index}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   WidthRequest="30" 
                                   HorizontalTextAlignment="Center" />

                            
                            <Label Text="{Binding Text}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   VerticalTextAlignment="Center" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Spacing="20" Margin="20,0">
            <Button Text="A" Command="{Binding SelectAnswerCommand}" CommandParameter="A" BackgroundColor="DarkBlue" TextColor="White" />
            <Button Text="B" Command="{Binding SelectAnswerCommand}" CommandParameter="B" BackgroundColor="DarkBlue" TextColor="White" />
            <Button Text="C" Command="{Binding SelectAnswerCommand}" CommandParameter="C" BackgroundColor="DarkBlue" TextColor="White" />
            <Button Text="D" Command="{Binding SelectAnswerCommand}" CommandParameter="D" BackgroundColor="DarkBlue" TextColor="White" />
        </StackLayout>

        
        <Button Text="Submit Answer" 
                Command="{Binding SubmitAnswerCommand}" 
                BackgroundColor="DarkBlue" 
                TextColor="White" 
                FontSize="18" 
                CornerRadius="10" 
                Padding="10" 
                HorizontalOptions="Center" 
                Margin="0,20" 
                Grid.Row="3" />

        
        <StackLayout Grid.Row="3" Orientation="Vertical" HorizontalOptions="Center" Margin="0,20">
            <Label Text="{Binding ScoreDisplay}" 
                   FontSize="18" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,10"/>
            <Label Text="{Binding TurnDisplay}" 
                   FontSize="18" 
                   TextColor="White" 
                   HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
