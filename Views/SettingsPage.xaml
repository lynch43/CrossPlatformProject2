<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrossPlatformProject2.ViewModels"
             x:Class="CrossPlatformProject2.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:SettingsPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Welcome Message -->
        <Label Text="{Binding WelcomeMessage}"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Number of Players -->
        <Label Text="Number of Players:"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />
        <Slider Minimum="1"
                Maximum="4"
                Value="{Binding NumberOfPlayers, Mode=TwoWay}"
                HorizontalOptions="FillAndExpand" />
        <Label Text="Players: {Binding NumberOfPlayers}"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Difficulty Slider -->
        <Label Text="Difficulty:"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />
        <Slider Minimum="0"
                Maximum="2"
                Value="{Binding DifficultyIndex, Mode=TwoWay}"
                HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding Difficulty}"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Number of Rounds -->
        <Label Text="Number of Rounds:"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />
        <Slider Minimum="5"
                Maximum="15"
                Value="{Binding NumberOfRounds, Mode=TwoWay}"
                HorizontalOptions="FillAndExpand" />
        <Label Text="Rounds: {Binding NumberOfRounds}"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="White" />

        <!-- Save Button -->
        <Button Text="Save Settings"
                Command="{Binding SaveSettingsCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                Padding="10"
                HorizontalOptions="Center"
                VerticalOptions="End" />

    </VerticalStackLayout>
</ContentPage>
